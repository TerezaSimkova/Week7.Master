@*Delete docente*@
@model DocenteViewModel

<form method="post">

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cognome"></label>
        <input asp-for="Cognome" class="form-control" readonly />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" readonly />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <input type="submit" value="Si, cancella" class="btn btn-danger" />
    <a class="btn btn-primary" asp-controller="Corsi" asp-action="Index" role="button">Anulla e ritorna</a>
</form>