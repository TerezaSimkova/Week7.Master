@model CorsoViewModel

<p>Sei sicuro di voler eliminare il corso @Model.CodiceCorso - @Model.Nome?</p>
<br />
<form method="post">
    <div class="form-group">
        <label asp-for="CodiceCorso"></label>
        <input asp-for="CodiceCorso" class="form-control" readonly />
        <span asp-validation-for="CodiceCorso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descrizione"></label>
        <input asp-for="Descrizione" class="form-control" readonly/>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>

    <input type="submit" value="Si, eliminare!" class="btn btn-warning" />
    <a class="btn btn-primary" asp-controller="Corsi" asp-action="Index" role="button">Annulare e tornare</a>
</form>
